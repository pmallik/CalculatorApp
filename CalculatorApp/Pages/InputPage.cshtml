@page
@model InputPageModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Calculator</title>
</head>
<body>
    <h2>Calculator</h2>

    <form method="post">
        <div>
            <label for="inputString">Enter a string:</label>
            <input type="text" id="inputString" name="InputString" value="@Model?.Input?.InputString" required />
        </div>
        <button type="submit">Evaluate</button>
    </form>

    @if (Model?.Input?.Result > 0)
    {
        <div>
            <h3>Result: @Model?.Input?.Result</h3>
            
        </div>
       
    }
    @if (Model?.Input?.ErrorMessage != string.Empty && Model?.Input?.ErrorMessage != "false")
    {
        <div>

            <h2>Error Message: @Model?.Input?.ErrorMessage</h2>
        </div>
    }
   
</body>
</html>
